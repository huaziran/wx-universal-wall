			<view>邀请好友</view>
		</view>
		<view class='right' bindtap='clickInvitivation'>
			<text class='opr'>一起来玩~</text>></view>
	</view> -->

		<view class='hr'></view>
		<!-- 产品意见 -->
		<view class='item' bindtap='onAdvanceClick' style="color:#6D59D1">
			<view class='icon'>
				<image src='../../images/me/advice.png' style="width:22px;height:21px;"></image>
			</view>
			<view class='itemName'>
				<view>产品意见</view>
			</view>
			<view class='right'>></view>
		</view>
		<view class='hr'></view>

	</view>








