<!--pages/me/me.wxml-->

	<view class='amountBg' style="background-image: url('/../../images/timg1.jpg');background-repeat:no-repeat; background-size:100% 100%;-moz-background-size:100% 100%;">
		<view class='img'>
			<open-data type="userAvatarUrl"></open-data>
		</view>
		<view class='account'>
			<view class='nick-name'>
				<open-data type="userNickName" lang="zh_CN"></open-data>
			</view>
			<view class='address'>
				<open-data type="userCountry" lang="zh_CN"></open-data>·
				<open-data type="userProvince" lang="zh_CN"></open-data>·
				<open-data type="userCity" lang="zh_CN"></open-data>
			</view>
		</view>
	</view>

	<!-- 底部列表 -->
	<view class='content'>
		<!-- 收藏列表 -->
		<view class='line'></view>
		<view class='item' bindtap='onCollectClick' style="color:#C301FF">
			<view class='icon'>
				<image src='../../images/me/collect.png' style="width:22px;height:21px;"></image>
			</view>
			<view class='itemName'>
				<view>收藏列表</view>
			</view>
			<view class='right'>></view>
		</view>

		<!-- 发布历史 -->
		<view class='hr'></view>
		<view class='item' bindtap='onHistoryClick' style="color:#11F3C5">
			<view class='icon'>
				<image src='../../images/me/history.png' style="width:22px;height:21px;"></image>
			</view>
			<view class='itemName'>
				<view>发布历史</view>
			</view>
			<view class='right'>></view>
		</view>
		<!-- 邀请好友 -->
		<view class='line'></view>

		<!-- <view class='item'>
		<view class='icon'>
